<%= erb :pagehead, :locals => { :title => 'index' } %>
<div id="page">
  <p>A giant externally sourced yiff gallery!</p>
  <% r.each do |res| %>
  <div class="submission">
    <img src="<%= res['image'] %>" class="indeximg"/><br/>
    <a href="/s/<%= res['uuid'] %>"><%= res['title'] %></a> |
    <a href="<%= res['artpage'] %>">source</a> |
    <a href="<%= res['artist'] %>">artist</a>
  </div>
  <% end %>
</div>
<%= erb :pagefoot %>
